@model ShopEzy.Models.Customer

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 col-sm-6">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger" id="failed-alert">
                    @TempData["ErrorMessage"]
                </div>
            }
            <h2 class="text-center mb-4">Login</h2>

            <form asp-action="Login" asp-controller="Customer" method="post" class="shadow p-4 rounded border">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" required />
                </div>

                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" type="password" required />
                </div>

                <button id="LoginButton" type="submit" class="btn btn-primary btn-block">Login</button>
            </form>

            <div class="text-center mt-4">
                <a asp-action="Register" asp-controller="Customer" class="text-decoration-none">Create an account</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<script>
    setTimeout(function () {
        document.getElementById('failed-alert').style.display = 'none';
    }, 1000);
</script>
