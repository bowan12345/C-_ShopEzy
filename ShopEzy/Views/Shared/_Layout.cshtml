<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ShopEzy</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ShopEzy.styles.css" asp-append-version="true" />
    <style>
        body {
            background-image: url('/images/bg1.jpg'); 
            background-size: cover; 
            background-repeat: no-repeat; 
            background-position: -250px center;
        }


    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Product" asp-action="Index">ShopEzy</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CustomerUnitTest" asp-action="Index">Customer Unit Test</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ProductUnitTest" asp-action="Index">Product Unit Test</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="TransactionUnitTest" asp-action="Index">Transaction Unit Test</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">

                        @if (ViewBag.Customer != null)
                        {

                            <a id="cusomterDetails" class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Index">
                                <span>Welcome, @ViewBag.Customer.FirstName</span> |
                            </a>
                            <li class="nav-item">
                                <a id="viewTransaction" class="nav-link text-dark" asp-area="" asp-controller="Transaction" asp-action="Index">Transaction History</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a id="loginLink" class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ShopEzy - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
